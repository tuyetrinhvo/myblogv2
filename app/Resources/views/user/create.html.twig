{% extends 'base.html.twig' %}

{% block menu %}
    {{ include('user/menu.html.twig') }}
{% endblock %}

{% block body %}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Créer Utilisateur</h2>
                <hr class="star-primary">
            </div>
        </div>
    <div class="row">
        {{ form_start(form, {'action' : path('user_create')}) }}
            {{ form_widget(form) }}

                <button type="submit" class="btn btn-success pull-right">Ajouter</button>

            {{ form_end(form) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('user_list') }}" class="btn btn-primary btn-xl">Retourner à la liste des utilisateurs</a>
        {% endif %}
    </div>
</section>
{% endblock %}
