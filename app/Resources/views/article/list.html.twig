{% extends 'base.html.twig' %}

{% block menu %}
    {{ include('article/menu.html.twig') }}
{% endblock %}

{% block body %}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Liste des Articles</h2>
                <hr class="star-primary">
            </div>
        </div>

        <div class="row">
        {% for article in articles %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="caption">
                    <h4><a href="{{ path('article_show', {'title' : article.title }) }}">{{ article.title }}</a></h4>
                    <p><em>Auteur : {{ article.author.username }}</em></p>
                    <p>{{ article.content }}</p>
                </div>
                <div>
                    <form action="{{ path('article_delete', {'title' : article.title }) }}">
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                </div>
                <div>
                    <form action="{{ path('article_edit', {'title' : article.title }) }}">
                        <button class="btn btn-danger btn-sm pull-right">Modifier</button>
                    </form>
                </div>
            </div>
        {% endfor %}

            {#<div class="alert alert-warning" role="alert">
                Il n'y a pas encore de l'article enregistré. <a href="{{ path('article_create') }}" class="btn btn-warning pull-right">Créer un article</a>
            </div>#}


        </div>
    </div>
</section>

{% endblock %}
