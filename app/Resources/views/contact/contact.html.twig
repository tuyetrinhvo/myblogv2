{% extends 'base.html.twig' %}

{% block menu %}
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right active">
            <li class="hidden">
                <a href="#page-top"></a>
            </li>
            <li>
                <a href="{{ path('article_list') }}">Blog</a>
            </li>
            <li class="page-scroll">
                <a href="#portfolio">Contacter</a>
            </li>
            <li class="page-scroll">
                <a href="#about">A propos de</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li><a  href="{{ path('article_create') }}">Créer Article</a></li>
                <li><a  href="{{ path('logout') }}">Déconnecter</a></li>
            {% else %}
                <li><a  href="{{ path('login') }}">Se connecter</a></li>
                <li><a  href="{{ path('user_create') }}">S'inscrire</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="page-scroll">
                    <a href="{{ path('user_list') }}">User</a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block body %}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        <strong>Superbe !</strong> {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Oops !</strong> {{ flash_message }}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <h2>Contactez-moi</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">

                     {{ form_start(form, {'action': path('contact')}) }}

                     {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success margin-top">Envoyer</button>

                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
{% endblock %}