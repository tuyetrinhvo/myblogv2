{% extends 'base.html.twig' %}

{% block menu %}
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right active">
            <li class="hidden">
                <a href="#page-top"></a>
            </li>
            <li>
                <a href="{{ path('article_list') }}">Blog</a>
            </li>
            <li class="page-scroll">
                <a href="#portfolio">Se connecter</a>
            </li>
            <li class="page-scroll">
                <a href="#about">A propos de</a>
            </li>
            <li>
                <a href="{{ path('contact') }}">Contacter</a>
            </li>
            <li>
                <a  href="{{ path('user_create') }}">S'inscrire</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        <strong>Superbe !</strong> {{ flash_message }}
                    </div>
                {% endfor %}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <h2>Se connecter</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">
            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <form action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur :</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>

                        <label for="password">Mot de passe :</label>
                        <input type="password" id="password" name="_password" class="form-control"/>

                        <button class="btn btn-success btn-xl" type="submit">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
